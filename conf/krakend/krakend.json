{
  "version": 3,
  "name": "krakend",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/shortly/create",
      "method": "POST",
      "backend": [
        {
          "host": ["http://shortener_svc:8080"],
          "url_pattern": "/shortly/create"
        }
      ]
    },
    {
      "endpoint": "/shortly/{code}",
      "method": "GET",
      "backend": [
        {
          "host": ["http://redirect_svc:8080"],
          "url_pattern": "/shortly/{code}",
          "encoding":"no-op"
        }
      ]
    }
  ]
}

